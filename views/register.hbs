<section>
    <div class="container h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-lg-12 col-xl-11">
                <div class="card text-black mt-2 mb-2" style="border-radius: 25px;">
                    <div class="card-body p-md-5">
                        <div class="row justify-content-center">
                            <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">
                                <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Sign up</p>
                                <form class="mx-1 mx-md-4" id="RegisterForm" autocomplete="on" action="https://localhost:3113" method="POST">

                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            <label class="form-label" for="username">Username</label>
                                            <input type="text" id="username" name="Username" alt="User" class="form-control" value="{{data.Username}}" required/>
                                        </div>
                                    </div>

                                    {{#if wrongUsername}}
                                    <p class="text-danger">Username existed</p>
                                    {{/if}}

                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-address-card fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            <label class="form-label" for="name">Your Full Name</label>
                                            <input type="text" id="name" name="FullName" class="form-control" value="{{data.FullName}}" required/>
                                        </div>
                                    </div>

                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            <label class="form-label" for="email">Your Address</label>
                                            <input type="text" id="address" name="Address" class="form-control" value="{{data.Address}}" required />
                                        </div>
                                    </div>

                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            <label class="form-label" for="password">Password</label>
                                            <input type="password" id="password" name="Password" class="form-control" value="{{data.Password}}" required/>
                                            
                                        </div>
                                    </div>

                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-key fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            <label class="form-label" for="password_retype">Retype your password</label>
                                            <input type="password" id="retype_password" name="password_retype"
                                                class="form-control" required/>
                                            
                                        </div>
                                    </div>


                                    <div class="form-check d-flex justify-content-center mb-4">
                                        <input class="form-check-input me-2" type="checkbox" value="true"
                                            id="form2Example3c" name="checked" required/>
                                        <label class="form-check-label" for="form2Example3">
                                            I agree all statements in <a href="#!">Terms of service</a>
                                        </label>
                                    </div>

                                    <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                                        <button type="submit" id="RegisterSubmit" class="btn btn-primary btn-lg">Register</button>
                                    </div>
                                    <p class="text-center text-muted">You already have an account? <a href="/user/login"
                                            class="fw-bold text-body"><u>Login here</u></a></p>

                                </form>

                            </div>
                            <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">
                                <img src="/img/cover.png"
                                    class="img-fluid" alt="Cover photo">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>>
